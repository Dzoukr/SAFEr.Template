{
    "private": true,
    "scripts": {
        "prestart": "dotnet tool restore",
        "start": "cross-os start",
        "prebuild": "dotnet tool restore",
        "build": "dotnet fable ./src/SAFEr.App.Client --outDir ./.fable-build && webpack"
    },
    "cross-os": {
        "start": {
            "darwin": "NODE_ENV=development dotnet fable watch ./src/SAFEr.App.Client --outDir ./.fable-build --run webpack serve",
            "linux": "NODE_ENV=development dotnet fable watch ./src/SAFEr.App.Client --outDir ./.fable-build --run webpack serve",
            "win32": "set NODE_ENV=development& dotnet fable watch ./src/SAFEr.App.Client --outDir ./.fable-build --run webpack serve"
        }
    },
    "devDependencies": {
        "copy-webpack-plugin": "^9.0.1",
        "core-js": "^3.16.1",
        "cross-os": "^1.4.0",
        "css-loader": "^6.2.0",
        "dotenv-webpack": "^7.0.3",
        "graceful-fs": "^4.2.8",
        "html-webpack-plugin": "^5.3.2",
        "mini-css-extract-plugin": "^2.2.0",
        "react-dom": "^17.0.2",
        "remotedev": "^0.2.9",
        "sass": "^1.37.5",
        "sass-loader": "^12.1.0",
        "source-map-loader": "^3.0.0",
        "style-loader": "^3.2.1",
        "webpack": "^5.49.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^4.3.1"
    },
    "dependencies": {
        "react": "^17.0.2",
        "@fortawesome/fontawesome-free": "^5.15.4",
        "bulma": "^0.9.3"
    }
}